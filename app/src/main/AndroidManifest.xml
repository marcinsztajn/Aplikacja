                android:value="none.training_3.MainActivity" />
            <intent-filter>
                <action android:name="none.training_3.StartGame" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SinglePlayerMainClass"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".MultiPlayerMainClass"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"

            />
        <activity
            android:name=".TypingNameActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".About"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:value="none.training_3.MainActivity" />
            <intent-filter>
                <action android:name="none.training_3.StartGame" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Rules"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                android:value="none.training_3.MainActivity" />
            <intent-filter>
                <action android:name="none.training_3.StartGame" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
