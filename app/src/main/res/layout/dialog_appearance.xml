<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/startwho"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:id="@+id/who_win_tv"
                android:layout_marginTop="10dp"
                android:textColor="#ff0101"
                android:textSize="40dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/what_now_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="rozgrywa:"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/who_win_tv"
                android:layout_centerHorizontal="true"
                android:textColor="@color/green_to_higlight"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/who_now_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="dsadd"
                android:layout_below="@+id/what_now_tv"
                android:layout_marginTop="10dp"
                android:textColor="#ff0101"
                android:textSize="40dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/after_tv_simple_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/who_now_tv"
                android:text="za..."
                android:layout_marginTop="10dp"
                android:textColor="@color/green_to_higlight"
                android:layout_centerHorizontal="true"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/time_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/after_tv_simple_text"
                android:textColor="#ff0101"
                android:textSize="55dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>



</LinearLayout>